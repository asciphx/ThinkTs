{
   "compilerOptions": {
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": false,
      "allowJs": true,
      "lib": ["es7","dom"],
      "outDir": "./build"
   },
   "exclude": ["node_modules"]
}