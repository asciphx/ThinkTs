{
  "apps":
  {
    "name": "ThinkTs",
    "cwd": "./",
    "args": "-r tsconfig-paths/register",
    "script": "ts/index.ts",
    "ignore_watch": [
      "node_modules",
      "log",
      "routes",
      ".vscode"
    ],
    "exec_interpreter": "C:/nodejs/ts-node",
    "instances": "max",
    "min_uptime": "60s",
    "max_restarts": 30,
    "exec_mode" : "cluster_mode",
    "error_file" : "./log/test-err.log",
    "out_file": "./log/test-out.log",
    "pid_file": "./log/test.pid",
    "watch": false
  }
}
